{
  "name": "react-tailwind",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run watch:css && react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build": "rimraf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__ && npm run build:css",
    "build:css": "postcss src/assets/tailwind.scss -o dist/index.css",
    "watch:css": "postcss src/assets/tailwind.scss -o src/assets/index.css"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "babel-cli": "^6.26.0",
    "babel-preset-react-app": "^9.1.2",
    "postcss-cli": "^7.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.7.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
